<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:textSize="30dp"
        android:textColor="#fc0303">
    </TextView>
    <TableLayout
        android:id="@+id/song_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="   User" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Song Title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Artist" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Rating" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Upvotes" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Downvotes" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Up" />
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="11"
                android:text="Down" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
            <Button
                android:id="@+id/up_button_btn"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <Button
                android:id="@+id/down_button_btn"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/bottom_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/home_button_btn"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginEnd="8dp"
            android:text="Home"
            android:textSize="8sp"
            android:textColor="#ffffff">
        </Button>
        <Button
            android:id="@+id/music_button_btn"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginEnd="8dp"
            android:text="Music"
            android:textSize="8sp"
            android:textColor="#ffffff">
        </Button>

        <Button
            android:id="@+id/create_button_btn"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|bottom"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Create"
            android:textColor="#ffffff"
            android:textSize="8sp"></Button>

        <Button
            android:id="@+id/jams_button_btn"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginStart="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Jams"
            android:textColor="#ffffff"
            android:textSize="8sp"></Button>

        <Button
            android:id="@+id/profile_button_btn"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginStart="8dp"
            android:text="Profile"
            android:textColor="#ffffff"
            android:textSize="8sp"></Button>
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>