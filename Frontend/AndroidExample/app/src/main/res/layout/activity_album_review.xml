<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottom_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/home_button_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="9sp"
            android:lines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/music_button_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textSize="9sp"
            android:lines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/create_button_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textSize="9sp"
            android:lines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/jams_button_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Jams"
            android:textSize="9sp"
            android:lines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/profile_button_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="9sp"
            android:lines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_button_layout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/review_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review Album"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <ImageView
                android:id="@+id/review_album_cover"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:background="#DDDDDD"
                android:scaleType="centerCrop"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <RatingBar
                android:id="@+id/album_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:progressTint="@android:color/holo_orange_light"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/best_song_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Best Song"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/worst_song_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Worst Song"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/review_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your full review here..."
                android:minLines="3"
                android:gravity="top|start"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/submit_review_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Review"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>