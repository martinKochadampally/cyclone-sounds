<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottom_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/home_button_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="9sp"
            android:lines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/music_button_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textSize="9sp"
            android:lines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/create_button_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textSize="9sp"
            android:lines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/jams_button_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Jams"
            android:textSize="9sp"
            android:lines="1"
            android:ellipsize="end"/>
        <Button
            android:id="@+id/profile_button_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="9sp"
            android:lines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_button_layout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blind Review"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>

            <ImageView
                android:id="@+id/blind_cover_art"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/blind_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mystery Song"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/blind_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mystery Artist"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/blind_play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Song"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate this track:"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <RatingBar
                android:id="@+id/blind_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:progressTint="@android:color/holo_orange_light"
                android:layout_marginBottom="16dp"/>

            <EditText
                android:id="@+id/blind_review_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your thoughts here..."
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top|start"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/submit_blind_review_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Review"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>